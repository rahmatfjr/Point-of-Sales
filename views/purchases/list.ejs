<%- include('../partials/header') %>

    <%- include('../partials/menu') %>

        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Purchases</h1>
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <span>this is data of Purchases</span>
            </div>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <a href="/purchases/add" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Add</span>
                    </a>
                </div>
                <div class="card-body">
                    <div class="table">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                            <thead>
                                <tr>
                                    <th>Invoice</th>
                                    <th>Time</th>
                                    <th>Total Summary</th>
                                    <th>Supplier</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Invoice</th>
                                    <th>Time</th>
                                    <th>Total Summary</th>
                                    <th>Supplier</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
        <script>
            let user = "<%= user.users_id %>"
            $(document).ready(function () {
                $('#dataTable').DataTable({
                    "lengthMenu": [[3, 10, 100, -1], [3, 10, 100, "All"]],
                    "processing": true,
                    "serverSide": true,
                    "ajax": "/purchases/datatablepurchases",
                    "columns": [
                        { "data": "invoice" },
                        {
                            "data": "time"
                            , render: function (data) {
                                return `${moment(data).format('DD MMM YYYY HH:mm:ss')}`
                            }
                        },
                        {
                            "data": "totalsum",
                            render: function (data) {
                                return `${money.currencyFormatter.format(data)}`
                            }
                        },
                        { "data": "name" },
                        {
                            "data": "invoice",
                            render: function (data, type) {
                                return `

                                <a href="/purchases/show/${data}" class="btn btn-circle btn-success"> <i class="fas fa-save "></i></a>

                                  
                                <a class="btn btn-danger btn-circle" data-toggle="modal"
                                  data-target="#delete${data}" href="/purchases/delete/${data}"><i class="fas fa-trash"></i></a>

                                  
                                  <div class="modal fade" id="delete${data}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Delete confirmations</h5>
                                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">Ã—</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">Are you sure, want to delete this account?</div>
                                                <div class="modal-footer">
                                                    <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
                                                    <a href='/purchases/delete/${data}' class="btn btn-primary">yes</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                `
                            }
                        },
                    ],
                    "rowCallback": function( row, data ) {
                    if ( user != data.operator ) {
                        $('td:eq(4)', row).css({
                            "pointer-events": "none",
                            "opacity": "50%"
                        });
                    }
                }
                });
            });
        </script>

        </div>
        <!-- End of Main Content -->

        <%- include('../partials/footer') %>