<%- include('../partials/header') %>

    <%- include('../partials/menu') %>

        <div class="container-fluid">

            <% rows.forEach((item)=> { %>

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Units</h1>
                <!-- <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <span>this is data of Users</span>
                </div> -->
                <form action="" method="post">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Form Edit</h6>
                        </div>
                        <div class="card-body">
                            <div class="table">
                                <!-- <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"> -->

                                <div class="mb-3 row">
                                    <label for="unit" class="col-sm-2 col-form-label">Unit</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="unit" name="unit"
                                            value="<%= item.unit %>">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name" name="name"
                                            value="<%= item.name %>">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="note" class="col-sm-2 form-label">Note</label>
                                    <div class="col-sm-10">
                                        <textarea class=" form-control" name="note" id="note"  rows="2"  ><%= item.note %></textarea>
                                    </div>
                                </div>
                                <!-- </table> -->
                            </div>
                        </div>
                        <div class="card-footer py-3">
                            <button type="submit" class="btn btn-info btn-icon-split">
                                <span class="icon">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Save</span>
                            </button>
                            <a href="/units" class="btn btn-warning btn-icon-split">
                                <span class="icon">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Back</span>
                            </a>
                        </div>
                    </div>
                </form>
                <% }) %>
        </div>
        <!-- /.container-fluid -->


        </div>
        <!-- End of Main Content -->

        <%- include('../partials/footer') %>