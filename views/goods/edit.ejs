<%- include('../partials/header') %>

    <%- include('../partials/menu') %>

        <div class="container-fluid">

            <% rows.forEach((item)=> { %>

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Units</h1>
                <!-- <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <span>this is data of Users</span>
                </div> -->
                <form action="" method="post" enctype="multipart/form-data">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Form edit</h6>
                        </div>
                        <div class="card-body">
                            <div class="table">
                                <!-- <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"> -->
    
                                <div class="mb-3 row">
                                    <label for="barcode" class="col-sm-2 col-form-label">Barcode</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="barcode" name="barcode" value=" <%= item.barcode %> ">
                                    </div>
                                </div>
    
                                <div class="mb-3 row">
                                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name" name="name" value=" <%= item.name %> ">
                                    </div>
                                </div>
    
                                <div class="mb-3 row">
                                    <label for="stock" class="col-sm-2 col-form-label">Stock</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="stock" name="stock" value=" <%= item.stock %> ">
                                    </div>
                                </div>
    
                                <div class="mb-3 row">
                                    <label for="purchaseprice" class="col-sm-2 col-form-label">Purchase Price</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="purchaseprice" name="purchaseprice"
                                            value=" <%= item.purchaseprice %> ">
                                    </div>
                                </div>
    
                                <div class="mb-3 row">
                                    <label for="sellingprice" class="col-sm-2 col-form-label">Selling Price</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="sellingprice" name="sellingprice"
                                            value=" <%= item.sellingprice %> ">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="unit" class="col-sm-2 col-form-label">Unit</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="unit" name="unit">
                                            <% units.forEach( item=> { %>
                                                <option value="<%= item.unit %>" <%= item.unit == data.unit ? 'selected' : ''%> >
                                                    <%= item.name %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>
    
                                <div class="mb-3 row">
                                    <label for="uploadForm" class="col-sm-2 col-form-label">Picture</label>
                                    <div class="col-sm-10">
                                        <input type="file" name="picture" /> 
                                        <br>
                                        <br>
                                        <img src='/images/upload/<%= item.picture %>' style="width: 100px">
                                    </div>
                                </div>
                                <!-- </table> -->
                            </div>
                        </div>
    
                        
                        <div class="card-footer py-3">
                            <button type="submit" class="btn btn-info btn-icon-split">
                                <span class="icon">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Save</span>
                            </button>
                            <a href="/goods" class="btn btn-warning btn-icon-split">
                                <span class="icon">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Back</span>
                            </a>
                        </div>
                    </div>
                </form>
                <% }) %>
        </div>
        <script>
            $('#picture').change(function (event) {
                const [files] = picture.files
                if (files) {
                  previewimg.src = URL.createObjectURL(files)
                }
            })
        </script>
        <!-- /.container-fluid -->


        </div>
        <!-- End of Main Content -->

        <%- include('../partials/footer') %>