<%- include('../partials/header') %>

    <%- include('../partials/menu') %>

        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Goods</h1>
            <!-- <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <span>this is data of Users</span>
                </div> -->
            <form action="" method="post">

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Form Add</h6>
                    </div>
                    <div class="card-body">
                        <div class="table">
                            <!-- <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"> -->

                            <div class="mb-3 row">
                                <label for="barcode" class="col-sm-2 col-form-label">Barcode</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="barcode" name="barcode">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" name="name">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="stock" class="col-sm-2 col-form-label">Stock</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="stock" name="stock" value="0">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="purchaseprice" class="col-sm-2 col-form-label">Purchase Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="purchaseprice" name="purchaseprice"
                                        value="0">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="sellingprice" class="col-sm-2 col-form-label">Selling Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="sellingprice" name="sellingprice"
                                        value="0">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="unit" class="col-sm-2 col-form-label">Unit</label>
                                <div class="col-sm-10">
                                    <select class="form-control" id="unit" name="unit">
                                        <% rows.forEach( item=> { %>
                                            <option value="<%= item.unit %>">
                                                <%= item.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="uploadForm" class="col-sm-2 col-form-label">Unit</label>
                                <div class="col-sm-10">
                                    <form ref='uploadForm' id='uploadForm' name="uploadForm" action='/upload'
                                        method='post' encType="multipart/form-data">
                                        <input type="text" name="fileName">
                                        <input type="file" name="sampleFile" />
                                        <input type='submit' value='Upload!' />
                                    </form>
                                </div>
                            </div>
                            <!-- </table> -->
                        </div>
                    </div>
                    <div class="card-footer py-3">
                        <button type="submit" class="btn btn-info btn-icon-split">
                            <span class="icon">
                                <i class="fas fa-trash"></i>
                            </span>
                            <span class="text">Save</span>
                        </button>
                        <a href="/units" class="btn btn-warning btn-icon-split">
                            <span class="icon">
                                <i class="fas fa-trash"></i>
                            </span>
                            <span class="text">Back</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.container-fluid -->


        </div>
        <!-- End of Main Content -->

        <%- include('../partials/footer') %>